<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcb.demo.mybatis.sqlMapperInterface.AuthorMapper">
    <select id="getAll" resultType="com.zcb.demo.mybatis.sqlModel.Author">
        SELECT
          author_id AS  aid,
          first_name AS fname,
          last_name AS lname,
          country
        FROM authors;
    </select>

    <select id="getByAid" resultType="com.zcb.demo.mybatis.sqlModel.Author" parameterType="java.lang.Integer">
        SELECT
          author_id AS  aid,
          first_name AS fname,
          last_name AS lname,
          country
        FROM authors
        WHERE author_id = #{aid}
    </select>

    <delete id="deleteByAid" parameterType="java.lang.Integer">
        DELETE
        FROM authors
        WHERE author_id = #{aid}
    </delete>

    <insert id="insert" parameterType="com.zcb.demo.mybatis.sqlModel.Author"
        keyProperty="aid" useGeneratedKeys="true">
        INSERT
        INTO authors (first_name, last_name, country)
        VALUES (#{fname}, #{lname}, #{country})
    </insert>
</mapper>